{% extends "layout.njk" %}

{% block content %}

<main class="wrapper">
    <h1>Registrera</h1>
    <div class="login">
        <form action="/signup" method="post">
            <label for="username">Skriv ett användarnamn</label>
            <input type="text" id="username" name="username" required>
            <label for="">Skriv ett lösenord</label>
            <input type="text" id="password" name="password" required>
            <input type="submit" value="Registrera">
        </form>
    </div>
</main>

{% endblock %}